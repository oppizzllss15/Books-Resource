extends layout

block content
  div.home-hero
    h1= title
    p #{title} to access your Books<br><br><br>
    form(method="post", action="/register")
      .login-wrapper 
        - if (typeof message === 'string')
            .message #{message}
        input.form-control(type='text', name='email', placeholder='Username or email', required)
        input.form-control(type='password', name='password',placeholder="Password", required)
        input.form-control(type='password', name='confirm_password',placeholder="Confirm password", required)
        input.action-button(type='submit', value='Register')
